    <div class="row justify-content-center" id="adminApp">
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="module" src="{{ asset('../modules/pedidosinternet/views/js/pedidosInternet.js') }}"></script>
{% endblock %}
